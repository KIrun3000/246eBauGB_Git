---
import BaseLayout from './BaseLayout.astro';
import Disclaimer from '../components/Disclaimer.astro';
import SourcesBox from '../components/SourcesBox.astro';

export interface Props {
  title: string;
  description: string;
  pubDate?: Date;
  updatedDate?: Date;
  category?: string;
  tags?: string[];
  sources?: Array<{
    label: string;
    url: string;
  }>;
}

const { title, description, pubDate, updatedDate, category, tags, sources = [] } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="article">
    <div class="container article-container">
      <header class="article-header">
        <h1>{title}</h1>
        {pubDate && (
          <div class="article-meta">
            <time datetime={pubDate.toISOString()}>
              {pubDate.toLocaleDateString('de-DE', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}
            </time>
            {updatedDate && (
              <span class="updated">
                (Aktualisiert: {updatedDate.toLocaleDateString('de-DE', { 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })})
              </span>
            )}
            {category && <span class="category">{category}</span>}
          </div>
        )}
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <div class="article-content">
        <slot />
      </div>

      <SourcesBox sources={sources} />
      <Disclaimer />
    </div>
  </article>
</BaseLayout>

<style>
  .article-container {
    max-width: 800px;
  }

  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .article-header h1 {
    margin-bottom: 1rem;
  }

  .article-meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: 0.75rem;
  }

  .updated {
    font-size: 0.85rem;
  }

  .category {
    background: var(--color-bg-alt);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-weight: 500;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
  }

  .article-content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .article-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-bg-alt);
  }

  .article-content :global(h3) {
    margin-top: 2rem;
  }

  .article-content :global(strong) {
    font-weight: 600;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-light);
  }

  .article-content :global(code) {
    background: var(--color-bg-alt);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: 'Courier New', monospace;
  }

  .article-content :global(pre) {
    background: var(--color-bg-alt);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid var(--color-border);
    padding: 0.75rem;
    text-align: left;
  }

  .article-content :global(th) {
    background: var(--color-bg-alt);
    font-weight: 600;
  }
</style>
