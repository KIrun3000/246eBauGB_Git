    </div>
  </div>
</BaseLayout>

<style>
  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
    line-height: 1.7;
  }

  h1 {
    margin-bottom: 2rem;
  }

  h2 {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #e5e7eb;
  }

  h2:first-of-type {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }

  h3 {
    margin-top: 1.5rem;
    font-size: 1.1rem;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: #0066cc;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
